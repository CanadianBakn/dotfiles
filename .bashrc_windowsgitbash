function gitchpl()
{
    #TODO: pull curr branch if no args specified
    #test "$@" == "" && $@=$(git symbolic-ref HEAD | sed -e 's,.*/\(.*\),\1,');
    echo "git checkout $@ && git pull";
    git checkout "$@" && git pull;
}

function gitfchpl()
{
    echo "git fetch -p && git checkout $@ && git pull";
    git fetch -p && git checkout "$@" && git pull;
}

